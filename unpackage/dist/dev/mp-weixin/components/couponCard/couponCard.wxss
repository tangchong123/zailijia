.couponCard_box {
  margin-bottom: 20rpx;
}
.couponCard_box .beGray {
  /* Chrome, Safari, Opera */
  filter: grayscale(100%);
}
.couponCard_box .coupon_item {
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}
.couponCard_box .coupon_item .c1 {
  width: 40rpx;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 12px;
  background-color: #BBE5C0;
  color: #8c7c67;
}
.couponCard_box .coupon_item .money_info {
  width: 160rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #FBF8EB;
}
.couponCard_box .coupon_item .money_info .money {
  color: #F1B25D;
  margin-bottom: 10rpx;
}
.couponCard_box .coupon_item .money_info .money text:nth-of-type(1) {
  font-size: 14px;
  margin-right: 5rpx;
}
.couponCard_box .coupon_item .money_info .money text:nth-of-type(2) {
  font-size: 28px;
}
.couponCard_box .coupon_item .money_info .discount_info {
  color: #B6A185;
  font-size: 12px;
}
.couponCard_box .coupon_item .detail {
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}
.couponCard_box .coupon_item .detail .c2 {
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 30rpx;
  background-color: #FBF8EB;
  color: #B6A185;
  font-size: 12px;
  margin-bottom: 10rpx;
}
.couponCard_box .coupon_item .detail .detail_info {
  font-weight: 600;
  font-size: 18px;
  color: #333;
  text-align: left;
}
.couponCard_box .coupon_item .detail > view {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.couponCard_box .coupon_item .detail > view text {
  font-size: 12px;
  color: #aaa;
}
.couponCard_box .coupon_item .detail > view .use {
  width: 150rpx;
  height: 60rpx;
  margin-right: 20rpx;
  line-height: 60rpx;
  border-radius: 40rpx;
  background: linear-gradient(to left, #F3BE7A, #FED3A3);
}