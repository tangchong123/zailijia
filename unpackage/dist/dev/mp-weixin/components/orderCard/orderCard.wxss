.orderCard_box .order_item {
  width: 90vw;
  height: 400rpx;
  border-radius: 20rpx;
  overflow: hidden;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}
.orderCard_box .order_item .top_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
  margin-top: 10rpx;
  padding-bottom: 30rpx;
  font-size: 14px;
}
.orderCard_box .order_item .top_box .order_num text {
  color: #aaa;
  margin-left: 10rpx;
}
.orderCard_box .order_item .top_box .order_status .active {
  color: #c00;
}
.orderCard_box .order_item .bottom-box {
  margin-top: 30rpx;
}
.orderCard_box .order_item .bottom-box .detail_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.orderCard_box .order_item .bottom-box .detail_box .detail {
  display: flex;
  align-items: center;
}
.orderCard_box .order_item .bottom-box .detail_box .detail image {
  width: 120rpx;
  height: 120rpx;
}
.orderCard_box .order_item .bottom-box .detail_box .detail .desc {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 20rpx;
}
.orderCard_box .order_item .bottom-box .detail_box .detail .desc .desc_detail {
  width: 400rpx;
  text-align: left;
  font-weight: 600;
  font-size: 18px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.orderCard_box .order_item .bottom-box .detail_box .detail .desc .time {
  font-size: 12px;
  color: #aaa;
  margin-top: 10rpx;
}
.orderCard_box .order_item .bottom-box .detail_box .count_box {
  font-size: 12px;
  color: #aaa;
}
.orderCard_box .order_item .bottom-box .compute_box {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 30rpx;
  font-size: 14px;
}
.orderCard_box .order_item .bottom-box .compute_box text {
  color: #c00;
}
.orderCard_box .order_item .bottom-box .controller {
  height: 80rpx;
  position: relative;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.orderCard_box .order_item .bottom-box .controller .btn_box {
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
}
.orderCard_box .order_item .bottom-box .controller .btn_box button {
  height: 68rpx;
  line-height: 68rpx;
  margin-left: 20rpx;
  border-radius: 30rpx;
  border: 1px solid #ccc;
  background-color: #fff;
}
.orderCard_box .order_item .bottom-box .controller .btn_box button:nth-of-type(2) {
  border: 1px solid #00A07A;
  color: #00A07A;
}
.orderCard_box .order_item .bottom-box .controller .more {
  color: #aaa;
  position: relative;
  margin-left: 40rpx;
}
.orderCard_box .order_item .bottom-box .controller .more .tooltip {
  width: 180rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx 0 #aaa;
  position: absolute;
  top: -100rpx;
  left: 0rpx;
  color: #000;
}
.orderCard_box .order_item .bottom-box .controller .more .tooltip .triangle {
  width: 30rpx;
  height: 30rpx;
  border-radius: 8rpx;
  background-color: #fff;
  box-shadow: 15rpx 15rpx 15rpx -10rpx #aaa;
  transform: rotate(45deg) translateX(-50%);
  position: absolute;
  bottom: -20rpx;
  left: 30%;
  z-index: 2;
}
.orderCard_box .order_item .bottom-box .controller .more text:hover {
  color: #00A07A;
}