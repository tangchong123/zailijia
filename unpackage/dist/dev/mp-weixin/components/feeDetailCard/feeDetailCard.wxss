.feeDetailCard_box {
  height: 230px;
}
.feeDetailCard_box .box {
  height: 420rpx;
  width: 92vw;
  padding: 10rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 auto;
  font-size: 15px;
}
.feeDetailCard_box .box > .title {
  font-size: 16px;
  font-weight: 600;
  padding: 10rpx;
}
.feeDetailCard_box .box .fee_detail_box {
  padding: 10rpx;
}
.feeDetailCard_box .box .fee_detail_box .controller_box {
  height: 80rpx;
  background-color: #eee;
  line-height: 80rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
}
.feeDetailCard_box .box .fee_detail_box .controller_box text {
  font-weight: 600;
}
.feeDetailCard_box .box .fee_detail_box .detail_box .item {
  display: flex;
  justify-content: space-between;
  padding: 2rpx 10rpx;
  font-size: 14px;
}
.feeDetailCard_box .box .total_box {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}
.feeDetailCard_box .box .total_box .title {
  font-weight: 600;
  margin-right: 50rpx;
}
.feeDetailCard_box .box .total_box .total_info {
  color: #c00;
}