.repairSuccess_box {
  background-color: #f3f3f3;
}
.repairSuccess_box .success_hint {
  background-color: #fff;
  padding: 60rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.repairSuccess_box .success_hint .tick_box {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #C5E4BE;
  color: #00A07A;
}
.repairSuccess_box .success_hint .title {
  font-weight: 800;
  margin-top: 15rpx;
}
.repairSuccess_box .success_hint .det {
  font-size: 14px;
  text-align: center;
  margin-top: 20rpx;
  color: #333;
}
.repairSuccess_box .success_hint .controller_box {
  display: flex;
  margin-top: 40rpx;
}
.repairSuccess_box .success_hint .controller_box button {
  width: 220rpx;
  color: #00A07A;
  background-color: #fff;
  border-radius: 40rpx;
  border: 1px solid #00A07A;
}
.repairSuccess_box .success_hint .controller_box .see_btn {
  background-color: #C5E4BE;
  border: none;
  margin-left: 20rpx;
}
.repairSuccess_box .recommend_service_box {
  background-color: #fff;
  width: 90vw;
  margin: 0 auto;
  margin-top: 15rpx;
  border-radius: 15rpx;
  padding: 20rpx;
  padding-right: 0;
}
.repairSuccess_box .recommend_service_box .title {
  font-weight: 600;
}
.repairSuccess_box .recommend_service_box .recommend_box {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 20rpx;
}
.repairSuccess_box .recommend_service_box .recommend_box .recommend {
  display: flex;
  flex-direction: column;
  margin: 0 20rpx 20rpx 0;
}
.repairSuccess_box .recommend_service_box .recommend_box .recommend image {
  width: 310rpx;
  height: 310rpx;
}
.repairSuccess_box .recommend_service_box .recommend_box .recommend .title {
  font-weight: 600;
  font-size: 14px;
  margin-top: 5rpx;
}
.repairSuccess_box .recommend_service_box .recommend_box .recommend .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 5rpx;
}
.repairSuccess_box .recommend_service_box .recommend_box .recommend .info .price {
  font-size: 12px;
  color: #666;
}
.repairSuccess_box .recommend_service_box .recommend_box .recommend .info .price text {
  font-size: 16px;
  color: #ECB400;
  margin-right: 4rpx;
}
.repairSuccess_box .recommend_service_box .recommend_box .recommend .info .appointment_btn {
  padding: 8rpx 20rpx;
  background-color: #C5E4BE;
  color: #00A07A;
  font-size: 12px;
  font-weight: 600;
  border-radius: 30rpx;
}