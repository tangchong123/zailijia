.myComment_box {
  font-size: 15px;
}
.myComment_box .comment_box .master_info {
  background-color: #fff;
  padding: 40rpx 60rpx;
  display: flex;
  align-items: center;
  border-bottom: 15rpx solid #eee;
}
.myComment_box .comment_box .master_info .left {
  display: flex;
  align-items: center;
}
.myComment_box .comment_box .master_info .left image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 5rpx;
}
.myComment_box .comment_box .master_info .left .master_name {
  font-weight: 600;
  margin-left: 20rpx;
}
.myComment_box .comment_box .master_info .master_regTime {
  margin-left: 40rpx;
}
.myComment_box .comment_box .master_comment {
  background-color: #fff;
  border-bottom: 15rpx solid #eee;
  padding: 30rpx;
}
.myComment_box .comment_box .master_comment .question {
  font-size: 16px;
}
.myComment_box .comment_box .master_comment .comment_box {
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}
.myComment_box .comment_box .master_comment .comment_box .title {
  margin-right: 40rpx;
}
.myComment_box .comment_box .master_comment .comment_box .detail {
  color: #aaa;
  font-size: 13px;
  margin-left: 40rpx;
}
.myComment_box .comment_box .master_comment .comment_tag {
  display: flex;
  flex-wrap: wrap;
}
.myComment_box .comment_box .master_comment .comment_tag .tag {
  width: 153rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  color: #399D6A;
  background-color: #C5E4BE;
  border-radius: 25rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.myComment_box .comment_box .master_comment .comment_desc {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 10rpx;
  font-size: 13px;
}
.myComment_box .comment_box .master_comment .comment_desc textarea {
  background-color: #eee;
  border-radius: 20rpx;
  padding: 20rpx;
}
.myComment_box .comment_box .master_comment .comment_imgs {
  display: flex;
  justify-content: space-between;
}
.myComment_box .comment_box .master_comment .comment_imgs .upload_box {
  width: 140rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eee;
  border-radius: 10rpx;
  margin-right: 30rpx;
}
.myComment_box .comment_box .master_comment .comment_imgs .upload_box text {
  font-size: 12px;
  color: #888;
}
.myComment_box .comment_box .master_comment .comment_imgs .img_show_box {
  width: 470rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
}
.myComment_box .comment_box .master_comment .comment_imgs .img_show_box image {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 5rpx;
  margin-right: 5rpx;
}
