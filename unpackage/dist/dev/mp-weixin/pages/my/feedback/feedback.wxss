.feedback_box .feedback_content_box .feedback_box {
  width: 87vw;
  margin-left: 4vw;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
  padding: 30rpx;
}
.feedback_box .feedback_content_box .feedback_box textarea {
  font-size: 12px;
}
.feedback_box .feedback_content_box .feedback_box .hint {
  position: absolute;
  top: 440rpx;
  right: 90rpx;
  font-size: 12px;
  color: #666;
}
.feedback_box .feedback_content_box .feedback_box .photo_box {
  display: flex;
  justify-content: space-between;
}
.feedback_box .feedback_content_box .feedback_box .photo_box .upload_box {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eee;
  border-radius: 10rpx;
  margin-right: 30rpx;
}
.feedback_box .feedback_content_box .feedback_box .photo_box .upload_box text {
  font-size: 12px;
  color: #888;
}
.feedback_box .feedback_content_box .feedback_box .photo_box .img_show_box {
  width: 470rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
}
.feedback_box .feedback_content_box .feedback_box .photo_box .img_show_box image {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 5rpx;
  margin-right: 5rpx;
}
.feedback_box .controller_box .save_btn {
  width: 560rpx;
  height: 80rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 80rpx;
  border-radius: 48rpx;
  margin-top: 60rpx;
  background-color: #ccc;
  color: #fff;
  font-weight: 600;
}
.feedback_box .controller_box .save_btn2 {
  color: #00A07A;
  background-color: #C5E4BE;
}