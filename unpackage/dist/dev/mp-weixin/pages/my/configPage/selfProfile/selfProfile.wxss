.selfProfile_box .content_box {
  margin-top: 20rpx;
}
.selfProfile_box .content_box > view {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.selfProfile_box .content_box .avatar_box {
  border-bottom: 1px solid #ddd;
}
.selfProfile_box .content_box .avatar_box .modify_avatar_box {
  display: flex;
  align-items: center;
}
.selfProfile_box .content_box .avatar_box .modify_avatar_box image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.selfProfile_box .content_box .nickName_box .modify_nickName_box {
  display: flex;
}
.selfProfile_box .content_box .nickName_box .modify_nickName_box input {
  color: #888;
  text-align: right;
}
.selfProfile_box .content_box .nickName_box .modify_nickName_box uni-icons {
  margin-left: 10rpx;
}
.selfProfile_box .controller_box .save_btn {
  width: 560rpx;
  height: 80rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 80rpx;
  border-radius: 48rpx;
  margin-top: 120rpx;
  background-color: #fff;
  color: #000;
  font-weight: 600;
}