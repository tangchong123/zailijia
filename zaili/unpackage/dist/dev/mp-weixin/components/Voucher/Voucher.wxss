.box {
  width: 95%;
  margin: 20rpx auto;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx 10rpx 10rpx 20rpx;
  border: 2rpx solid #f0f0f0;
  overflow: hidden;
}
.box > .a {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box > .a > .one {
  width: 5%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  background-color: orange;
}
.box > .a > .two {
  height: 100%;
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f9f7e6;
}
.box > .a > .two > .price {
  font-size: 50rpx;
  margin-bottom: 12rpx;
}
.box > .a > .two > .kind {
  font-size: 28rpx;
  color: #A39480;
}
.box > .a > .three {
  height: 100%;
  width: 65%;
}
.box > .a > .three > .kind {
  width: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fdfdf8;
  margin: 4rpx 10rpx;
  border-radius: 10rpx;
  color: #ffb47b;
}
.box > .a > .three > .way {
  font-size: 42rpx;
  font-weight: 600;
  margin: 12rpx;
}
.box > .a > .three > .time {
  font-size: 26rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 20rpx;
}
.box > .a > .three > .time > .use {
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #dcb45a;
  border-radius: 12rpx;
  font-size: 30rpx;
}