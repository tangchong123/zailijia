.box {
  width: 95%;
  margin: 20rpx auto;
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.box > .order {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 12rpx 0rpx;
}
.box > .containerBox {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 12rpx 0rpx;
}
.box > .containerBox > .img {
  width: 130rpx;
  height: 130rpx;
}
.box > .containerBox > .container {
  width: calc(100% - 210rpx);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.box > .containerBox > .container > .a {
  font-size: 36rpx;
  font-weight: 800;
}
.box > .containerBox > .number {
  width: 60rpx;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box > .handleBox {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.box > .handleBox > .handle {
  margin-right: 20rpx;
  width: 140rpx;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid seagreen;
  border-radius: 20rpx;
  color: seagreen;
  font-size: 28rpx;
}