page {
  padding: 20rpx 30rpx 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #f0f0f0;
}
.box > .order-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  background-color: white;
  box-sizing: border-box;
  font-size: 36rpx;
}
.box > .order-state > view:nth-of-type(1) {
  margin: 20rpx 0;
}
.box > .order-state > view:nth-of-type(1) > .state {
  margin-left: 20rpx;
}
.box > .order-state > view:nth-of-type(2) {
  font-size: 24rpx;
  margin-bottom: 20rpx;
}
.box > .order-address {
  margin: 30rpx 0;
  background-color: white;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  font-size: 24rpx;
}
.box > .order-address > .box > .time {
  display: flex;
  justify-content: space-between;
  margin: 20rpx;
  border-bottom: 1rpx solid #9d9d9d;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}
.box > .order-address > .box > .time > view:nth-of-type(1) {
  color: #9d9d9d;
}
.box > .info {
  border-radius: 20rpx;
  background-color: white;
  padding: 20rpx;
  box-sizing: border-box;
}
.box > .info > view:nth-of-type(1) {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20rpx;
}
.box > .info > view:nth-of-type(1) > image {
  width: 100rpx;
  height: 100rpx;
}
.box > .info > view:nth-of-type(1) > .container {
  width: calc(100% - 240rpx);
}
.box > .info > view:nth-of-type(1) > .container > view:nth-of-type(1) {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.box > .info > view:nth-of-type(1) > .container > view:nth-of-type(2) {
  color: red;
  margin-bottom: 12rpx;
}
.box > .info > view:nth-of-type(1) > .container > view:nth-of-type(3) {
  color: #b4b4b4;
}
.box > .info > .descript {
  font-size: 32rpx;
}
.box > .info > .des {
  width: calc(100% - 60rpx);
  min-height: 200rpx;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  border: 1rpx solid darkgrey;
  box-sizing: border-box;
  padding: 20rpx;
  color: gray;
}
.box > .info .imageBox {
  display: flex;
  flex-wrap: wrap;
  margin: 12rpx 0;
}
.box > .info .imageBox > image {
  width: 140rpx;
  height: 140rpx;
  margin: 12rpx;
}
.box > .order-info {
  border-radius: 20rpx;
  background-color: white;
  padding: 30rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
}
.box > .order-info > .title {
  font-size: 32rpx;
}
.box > .order-info > .number {
  display: flex;
  justify-content: space-between;
  margin: 12rpx;
  color: darkgray;
  font-size: 28rpx;
}
.box > .master {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 20rpx;
  background-color: white;
  padding: 30rpx;
  box-sizing: border-box;
  margin-bottom: 120rpx;
}
.box > .master > .header > image {
  width: 120rpx;
  height: 120rpx;
}
.box > .master .tobody > .a > .b {
  display: flex;
  justify-content: center;
  align-items: center;
}
.box > .master > .connect {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.box > .master > .connect > text {
  font-size: 26rpx;
}
.fixed {
  position: fixed;
  width: 100vw;
  height: 100rpx;
  font-weight: 200;
  background-color: white;
  bottom: 0rpx;
  left: 0rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx;
}
.fixed > view {
  display: flex;
  justify-content: center;
  align-items: center;
}
.fixed > view:nth-of-type(1) > view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 30rpx;
  font-size: 24rpx;
}
.fixed > view:nth-of-type(2) {
  padding: 12rpx 20rpx;
  box-sizing: border-box;
  background-color: white;
  border: 1rpx solid greenyellow;
  border-radius: 20rpx;
  height: 100%;
}