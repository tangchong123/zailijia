.personInfo {
  width: 100%;
  background-color: white;
}
.personInfo > .containerBox {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  padding: 20rpx 0rpx 20rpx 40rpx;
  box-sizing: border-box;
  align-items: center;
}
.personInfo > .containerBox > .avatarImg {
  width: 160rpx;
  height: 160rpx;
  background-color: skyblue;
  border-radius: 80rpx;
  overflow: hidden;
  margin-right: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.personInfo > .containerBox > .avatarImg > .img {
  width: 100%;
  height: 100%;
}
.personInfo > .containerBox > .nologinBox {
  background-color: gray;
}
.personInfo > .containerBox > .infoBox {
  font-size: 38rpx;
}
.personInfo > .containerBox > .infoBox > .phoneBox {
  font-size: 34rpx;
}
.personInfo > .containerBox > .infoBox .nickNameBox {
  font-size: 48rpx;
  margin-right: 16rpx;
  font-weight: 600;
}
.personInfo > .voucherBox {
  margin: 20rpx auto;
  width: 80%;
  background-color: rgba(255, 216, 170, 0.9);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx 20rpx 0 0;
  color: #746e3c;
}
.myOrder {
  margin-top: 12rpx;
  background-color: white;
  box-shadow: 10px 0 0 10 black;
  border-radius: 20rpx 20rpx 0 0;
  border-bottom: 12rpx solid #f0f0f0;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.myOrder > .title {
  margin: 20rpx 0 20rpx 40rpx;
  font-size: 32rpx;
}
.myOrder > .containerBox {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
}
.myOrder > .containerBox > .container {
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 4rpx 12rpx;
  box-sizing: border-box;
}
.kefufixed {
  position: fixed;
  right: 30rpx;
  bottom: 30vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #00C957;
  border-radius: 20rpx;
}