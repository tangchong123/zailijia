.personInfo {
  width: 92%;
  height: 15vh;
  margin: 20rpx auto;
  border-radius: 20rpx;
  background-color: white;
}
.personInfo > .containerBox {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  padding-left: 40rpx;
  box-sizing: border-box;
  align-items: center;
}
.personInfo > .containerBox > .avatarImg {
  width: 160rpx;
  height: 160rpx;
  background-color: skyblue;
  border-radius: 80rpx;
  overflow: hidden;
  margin-right: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.personInfo > .containerBox > .avatarImg > .img {
  width: 100%;
  height: 100%;
}
.personInfo > .containerBox > .nologinBox {
  background-color: gray;
}
.personInfo > .containerBox > .infoBox {
  font-size: 38rpx;
}
.personInfo > .containerBox > .infoBox > .phoneBox {
  font-size: 34rpx;
}
.personInfo > .containerBox > .infoBox .nickNameBox {
  font-size: 48rpx;
  margin-right: 16rpx;
  font-weight: 600;
}
.kindBox {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.kindBox > view {
  width: 92%;
  margin: 16rpx;
}